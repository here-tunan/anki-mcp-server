{
  "name": "mcp-server-anki",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server enabling AI assistants (Claude, GPT-4, Gemini, etc.) to interact with Anki flashcards through AnkiConnect.",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-anki": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "README_zh.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/here-tunan/mcp-server-anki.git"
  },
  "keywords": [
    "anki",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "flashcards",
    "anki-connect",
    "spaced-repetition"
  ],
  "author": "here-tunan",
  "license": "Apache-2.0",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/here-tunan/mcp-server-anki/issues"
  },
  "homepage": "https://github.com/here-tunan/mcp-server-anki#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
